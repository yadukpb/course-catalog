{
  "name": "docker-hello",
  "private": true,
  "version": "0.0.1",
  "description": "Basic hello world application for Node.js",
  "author": "Robbie Minshall <rjminsha@us.ibm.com>",
  "jest": {
    "verbose": true,
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "outputDirectory": "./test",
    "outputName": "jest-junit.xml",
    "uniqueOutputName": "false",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "false"
  },
  "scripts": {
    "start": "node app.js",
    "start-server": "node --max-http-header-size=65535 app.js testApp",
    "stop-server": "killall -SIGINT testApp",
    "test-unit": "jest ./test/unit.test.js",
    "test-fvt": "jest ./test/fvt.test.js",
    "build": "echo 'Build step completed'"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "google-auth-library": "^9.14.2",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.10.0",
    "mongoose": "^8.8.1",
    "nconf": "*"
  },
  "devDependencies": {
    "axios": "^1.7.7",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0"
  },
  "overrides": {
    "cookie": "0.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
